{
  "name": "scratch-phpmod",
  "author": "yv",
  "license": "MIT",
  "bin": {
    "phan": "./lib/composer-libs/phan/phan/phan"
  },
  "engines": {
    "node": "10.12.0"
  },
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "watch": "npm-watch",
    "lint:md": "remark --quiet content/**/*.md",
    "lint:php": "./lib/composer-libs/phan/phan/phan --config-file .phan/config.php --directory cli/mastphp7/  --exclude-directory-list cli/mastphp7/*/vendor",
    "lint:php:php-cs-fixer": "php-cs-fixer -vv --dry-run --rules=@PSR1,@PSR2 fix cli/mastphp7/"
  },
  "watch": {
    "lint:php": {
      "patterns": [
        "cli/phpmod/*/*",
        "cli/phpmod/*/src/*"
      ],
      "extensions": [
        "php"
      ],
      "ignore": "",
      "quiet": false
    }
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "autoprefixer": "^9.5.1",
    "axios": "^0.19.0",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.27.10",
    "browser-sync-webpack-plugin": "^2.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "file-loader": "^3.0.1",
    "globule": "^1.2.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.7.0",
    "npm-watch": "^0.6.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "stylelint": "^10.0.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "svg-sprite-loader": "^4.1.6",
    "svg-transform-loader": "^2.0.7",
    "svgo": "^1.2.2",
    "svgo-loader": "^2.2.0",
    "tailwindcss": "^1.0.3",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@babel/runtime": "^7.4.5",
    "bootstrap": "^4.3.1",
    "jstransformer-highlight": "^2.0.0",
    "jstransformer-markdown-it": "^2.1.0",
    "markdown-it": "^8.4.2",
    "object-fit-images": "^3.2.4",
    "svgxuse": "^1.2.6"
  }
}
