.hero
  width 100%
  height 25rem
  position relative
  &__bg
    width 100%
    height 100%
    background-color c_black
    img
      width 100%
      height 100%
      // filter brightness(60%)
      opacity .6
      object-fit cover
      font-family 'object-fit:cover;'
  &__txts
    width 100%
    padding 1rem
    position absolute
    top 50%
    left 50%
    z-index 2
    transform translate(-50%, -50%)
    color c_white
    text-align center
    +pc()
      width w_single
      padding 0
      top 4rem
      left 50%
      transform translate(-((w_single / 2) - base), 0)
      text-align left
  &__title
    font-weight bold
    font-size f_5xl
